{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "module": "ES2020",
    "target": "ES2020",
    "outDir": "./dist",
    "declaration": true,
    "strict": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "rootDir": "./src",
    "jsx": "react"
  },
  "exclude": [
    "dist",
    "client",
    "**/tests/**"
  ]
}